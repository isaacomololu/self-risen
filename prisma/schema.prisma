generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(uuid(4))
  firebaseId         String              @unique
  name               String
  username           String?
  // password        String
  email              String              @unique
  avatar             String?
  fcmTokens          String[]            @default([])
  lastLoggedInAt     DateTime?
  lastLoggedOutAt    DateTime?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  wheelOfLife        WheelOfLife?
  reflectionSessions ReflectionSession[]
}

model Notification {
  id                String                    @id @default(uuid())
  type              String
  title             String
  body              String
  channels          NotificationChannelType[]
  generatedByUserId String?
  meta              Json                      @default("{}")
  estateId          String?
  iconUrl           String?
  resourceId        String?
  resourceType      String?
  deepLink          String?
  requestId         String                    @unique
  recipients        NotificationRecipient[]
  createdAt         DateTime                  @default(now())
  updatedAt         DateTime                  @updatedAt

  @@index([requestId])
  @@index([type])
  @@index([generatedByUserId])
}

model NotificationRecipient {
  id             String       @id @default(uuid())
  notificationId String
  notification   Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  recipientId    String
  isRead         Boolean      @default(false)
  isDismissed    Boolean      @default(false)
  createdAt      DateTime     @default(now())

  @@index([recipientId, isRead])
  @@index([recipientId, createdAt])
  @@index([notificationId])
}

model NotificationAuditLog {
  id               String                  @id @default(uuid())
  requestId        String
  type             String // USER | EXTERNAL
  notificationType String
  recipientId      String
  channel          NotificationChannelType
  provider         String
  status           NotificationStatus
  error            String?
  metadata         Json                    @default("{}")
  sentAt           DateTime?
  createdAt        DateTime                @default(now())

  @@index([recipientId, notificationType, createdAt])
  @@index([requestId, channel])
  @@index([status, createdAt])
  @@index([recipientId, createdAt])
}

model NotificationDeadLetterQueue {
  id               String                  @id @default(uuid())
  requestId        String
  notificationId   String
  userId           String?
  channel          NotificationChannelType
  recipient        String
  notificationType String
  attempts         Int
  lastError        String
  jobData          Json                    @default("{}")
  failedAt         DateTime                @default(now())
  createdAt        DateTime                @default(now())

  @@index([requestId])
  @@index([userId])
  @@index([failedAt])
  @@index([notificationId])
}

enum NotificationChannelType {
  EMAIL
  SMS
  PUSH
  IN_APP
}

enum NotificationStatus {
  QUEUED
  SENT
  FAILED
}

model PasswordResetOtp {
  id         String    @id @default(uuid())
  email      String
  otp        String
  expiresAt  DateTime
  isUsed     Boolean   @default(false)
  verifiedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([email])
  @@index([expiresAt])
}

model WheelOfLife {
  id          String            @id @default(uuid())
  userId      String            @unique
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories  WheelCategory[]
  assessments WheelAssessment[]
  focuses     WheelFocus[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([userId])
}

model WheelCategory {
  id                 String              @id @default(uuid())
  wheelId            String
  wheel              WheelOfLife         @relation(fields: [wheelId], references: [id], onDelete: Cascade)
  name               String
  order              Int
  focuses            WheelFocus[]
  reflectionSessions ReflectionSession[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  @@index([wheelId])
}

model WheelAssessment {
  id             String       @id @default(uuid())
  wheelId        String
  wheel          WheelOfLife  @relation(fields: [wheelId], references: [id], onDelete: Cascade)
  scores         Json
  strongestArea  String?
  weakestArea    String?
  imbalanceScore Float?
  focuses        WheelFocus[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([wheelId])
  @@index([wheelId, createdAt])
}

model WheelFocus {
  id                 String              @id @default(uuid())
  wheelId            String
  wheel              WheelOfLife         @relation(fields: [wheelId], references: [id], onDelete: Cascade)
  categoryId         String
  category           WheelCategory       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  isActive           Boolean             @default(true)
  startedAt          DateTime            @default(now())
  completedAt        DateTime?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  wheelAssessment    WheelAssessment?    @relation(fields: [wheelAssessmentId], references: [id])
  wheelAssessmentId  String?
  reflectionSessions ReflectionSession[]

  @@index([wheelId])
  @@index([categoryId])
  @@index([wheelId, isActive])
}

model ReflectionSession {
  id                      String                  @id @default(uuid())
  userId                  String
  user                    User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId              String
  category                WheelCategory           @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  wheelFocusId            String?
  wheelFocus              WheelFocus?             @relation(fields: [wheelFocusId], references: [id], onDelete: SetNull)
  prompt                  String
  rawBeliefText           String?
  audioUrl                String?
  transcriptionText       String?
  limitingBelief          String?
  generatedAffirmation    String?
  approvedAffirmation     String?
  sessionDurationDays     Int?
  expiresAt               DateTime?
  aiAffirmationAudioUrl   String?
  userAffirmationAudioUrl String?
  playbackCount           Int                     @default(0)
  lastPlayedAt            DateTime?
  beliefRerecordedAt      DateTime?
  beliefRerecordCount     Int                     @default(0)
  status                  ReflectionSessionStatus @default(PENDING)
  createdAt               DateTime                @default(now())
  updatedAt               DateTime                @updatedAt
  completedAt             DateTime?

  @@index([userId])
  @@index([categoryId])
  @@index([wheelFocusId])
  @@index([userId, status])
  @@index([userId, createdAt])
  @@index([expiresAt, status])
}

enum ReflectionSessionStatus {
  PENDING
  BELIEF_CAPTURED
  AFFIRMATION_GENERATED
  APPROVED
  COMPLETED
}
