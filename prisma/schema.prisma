generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String              @id @default(uuid(4))
  firebaseId         String              @unique
  name               String
  username           String?
  // password        String
  email              String              @unique
  avatar             String?
  fcmTokens          String[]            @default([])
  streak             Int                 @default(0)
  sessions           Int                 @default(0)
  lastStreakDate     DateTime?
  lastLoggedInAt     DateTime?
  lastLoggedOutAt    DateTime?
  ttsVoicePreference TtsVoicePreference? @default(ANDROGYNOUS_CALM)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  wheelOfLife        WheelOfLife?
  reflectionSessions ReflectionSession[]
  visionBoards       VisionBoard[]
  journals           Journal[]
  streakHistory      StreakHistory[]
}

model StreakHistory {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime @db.Date
  streak    Int
  createdAt DateTime @default(now())

  @@unique([userId, date])
  @@index([userId])
  @@index([userId, date])
}

model Notification {
  id                String                    @id @default(uuid())
  type              String
  title             String
  body              String
  channels          NotificationChannelType[]
  generatedByUserId String?
  meta              Json                      @default("{}")
  estateId          String?
  iconUrl           String?
  resourceId        String?
  resourceType      String?
  deepLink          String?
  requestId         String                    @unique
  recipients        NotificationRecipient[]
  createdAt         DateTime                  @default(now())
  updatedAt         DateTime                  @updatedAt

  @@index([requestId])
  @@index([type])
  @@index([generatedByUserId])
}

model NotificationRecipient {
  id             String       @id @default(uuid())
  notificationId String
  notification   Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  recipientId    String
  isRead         Boolean      @default(false)
  isDismissed    Boolean      @default(false)
  createdAt      DateTime     @default(now())

  @@unique([recipientId, notificationId])
  @@index([recipientId, isRead])
  @@index([recipientId, createdAt])
  @@index([notificationId])
}

model NotificationAuditLog {
  id               String                  @id @default(uuid())
  requestId        String
  type             String // USER | EXTERNAL
  notificationType String
  recipientId      String
  channel          NotificationChannelType
  provider         String
  status           NotificationStatus
  error            String?
  metadata         Json                    @default("{}")
  sentAt           DateTime?
  createdAt        DateTime                @default(now())

  @@index([recipientId, notificationType, createdAt])
  @@index([requestId, channel])
  @@index([status, createdAt])
  @@index([recipientId, createdAt])
}

model NotificationDeadLetterQueue {
  id               String                  @id @default(uuid())
  requestId        String
  notificationId   String
  userId           String?
  channel          NotificationChannelType
  recipient        String
  notificationType String
  attempts         Int
  lastError        String
  jobData          Json                    @default("{}")
  failedAt         DateTime                @default(now())
  createdAt        DateTime                @default(now())

  @@index([requestId])
  @@index([userId])
  @@index([failedAt])
  @@index([notificationId])
}

model PasswordResetOtp {
  id         String    @id @default(uuid())
  email      String
  otp        String
  expiresAt  DateTime
  isUsed     Boolean   @default(false)
  verifiedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([email])
  @@index([expiresAt])
}

model WheelOfLife {
  id          String            @id @default(uuid())
  userId      String            @unique
  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories  WheelCategory[]
  assessments WheelAssessment[]
  focuses     WheelFocus[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([userId])
}

model WheelCategory {
  id                 String              @id @default(uuid())
  wheelId            String
  wheel              WheelOfLife         @relation(fields: [wheelId], references: [id], onDelete: Cascade)
  name               String
  order              Int
  focuses            WheelFocus[]
  reflectionSessions ReflectionSession[]
  visionBoard        VisionBoard?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  @@index([wheelId])
}

model WheelAssessment {
  id             String       @id @default(uuid())
  wheelId        String
  wheel          WheelOfLife  @relation(fields: [wheelId], references: [id], onDelete: Cascade)
  scores         Json
  strongestArea  String?
  weakestArea    String?
  imbalanceScore Float?
  focuses        WheelFocus[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([wheelId])
  @@index([wheelId, createdAt])
}

model WheelFocus {
  id                 String              @id @default(uuid())
  wheelId            String
  wheel              WheelOfLife         @relation(fields: [wheelId], references: [id], onDelete: Cascade)
  categoryId         String
  category           WheelCategory       @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  isActive           Boolean             @default(true)
  startedAt          DateTime            @default(now())
  completedAt        DateTime?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  wheelAssessment    WheelAssessment?    @relation(fields: [wheelAssessmentId], references: [id])
  wheelAssessmentId  String?
  reflectionSessions ReflectionSession[]

  @@index([wheelId])
  @@index([categoryId])
  @@index([wheelId, isActive])
}

model ReflectionSession {
  id                      String                  @id @default(uuid())
  userId                  String
  user                    User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId              String
  category                WheelCategory           @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  wheelFocusId            String?
  wheelFocus              WheelFocus?             @relation(fields: [wheelFocusId], references: [id], onDelete: SetNull)
  prompt                  String
  rawBeliefText           String?
  audioUrl                String?
  transcriptionText       String?
  limitingBelief          String?
  generatedAffirmation    String?
  approvedAffirmation     String?
  aiAffirmationAudioUrl   String?
  userAffirmationAudioUrl String?
  playbackCount           Int                     @default(0)
  lastPlayedAt            DateTime?
  beliefRerecordedAt      DateTime?
  beliefRerecordCount     Int                     @default(0)
  status                  ReflectionSessionStatus @default(PENDING)
  isVision                Boolean                 @default(false)
  createdAt               DateTime                @default(now())
  updatedAt               DateTime                @updatedAt
  completedAt             DateTime?
  vision                  Vision?
  waves                   Wave[]

  @@index([userId])
  @@index([categoryId])
  @@index([wheelFocusId])
  @@index([userId, status])
  @@index([userId, createdAt])
}

model Wave {
  id           String            @id @default(uuid())
  sessionId    String
  session      ReflectionSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  startDate    DateTime
  endDate      DateTime
  durationDays Int
  isActive     Boolean           @default(true)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  @@index([sessionId, isActive])
  @@index([endDate, isActive])
}

model VisionBoard {
  id         String        @id @default(uuid())
  categoryId String        @unique
  category   WheelCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  userId     String
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  visions    Vision[]
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@index([categoryId])
  @@index([userId])
}

model Vision {
  id                  String             @id @default(uuid())
  visionBoardId       String
  visionBoard         VisionBoard        @relation(fields: [visionBoardId], references: [id], onDelete: Cascade)
  reflectionSessionId String?            @unique
  reflectionSession   ReflectionSession? @relation(fields: [reflectionSessionId], references: [id], onDelete: Cascade)
  imageUrl            String?
  order               Int?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([visionBoardId])
  @@index([reflectionSessionId])
  @@index([visionBoardId, order])
}

model Journal {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime @default(now())
  title     String
  text      String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([userId, createdAt])
  @@index([userId, date])
}

model VisionBoardSound {
  id        String   @id @default(uuid())
  soundUrl  String
  fileName  String?
  fileSize  Int?
  mimeType  String?
  order     Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum NotificationChannelType {
  EMAIL
  SMS
  PUSH
  IN_APP
}

enum NotificationStatus {
  QUEUED
  SENT
  FAILED
}

enum ReflectionSessionStatus {
  PENDING
  BELIEF_CAPTURED
  AFFIRMATION_GENERATED
  APPROVED
  COMPLETED
}

enum TtsVoicePreference {
  // Male Personas
  MALE_CONFIDENT      // Onyx - Deep, authoritative, grounding
  MALE_FRIENDLY       // Echo - Warm, conversational, supportive
  
  // Female Personas
  FEMALE_EMPATHETIC   // Nova - Nurturing, warm, compassionate
  FEMALE_ENERGETIC    // Shimmer - Upbeat, vibrant, motivating
  
  // Androgynous Personas
  ANDROGYNOUS_CALM    // Alloy - Balanced, neutral, steady
  ANDROGYNOUS_WISE    // Fable - Thoughtful, mature, grounded
}
